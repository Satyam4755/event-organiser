<div class="mainDabba">
  <div class="center-section">
    <img src="<%= event.image %>" alt="image" class="event-img">

    
    <div class="ekaur">
      <style>
      .center-section .event-img {
      display: block;
      max-width: 100%;
      max-height: 320px;
      margin: 0 auto 24px auto;
      border-radius: 14px;
      box-shadow: 0 4px 18px rgba(108, 92, 231, 0.12);
      object-fit: cover;
      background: #f0f0ff;
      }
    </style>
      <div class="info-line"><span class="label">Category:</span> <%= event.category %></div>
    <div class="info-line"><span class="label">Location:</span> <%= event.location %></div>
    <% if (event.dates && event.dates.length > 0) { %>
      <div class="info-line">
        <span class="label">üìÖ Schedules:</span>
        <ul>
          <% event.dates.forEach((date, index) => { %>
            <li>
              <%= new Date(date).toDateString() %>
              <% if (event.times && event.times[index]) { %>
                ‚Äî <span><%= event.times[index] %></span>
              <% } %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <div class="info-line">
      <span class="label">Ticket Price:</span> ‚Çπ<%= event.ticketPrice %>
    </div>
    <div class="info-line">
      <span class="label">Rating:</span>
      <span>
        <% for (let i = 0; i < Math.round(averageRating); i++) { %>‚≠ê<% } %>
        (<%= averageRating %>/5)
      </span>
    </div>
    <div class="info-line">
      <span class="label">Total Bookings:</span>
      <strong class="<%= numberOfOrders > 0 ? 'green' : 'red' %>">
        <%= numberOfOrders || 0 %>
      </strong>
    </div>

    <% if (event.bannerImage) { %>
      <a href="<%= event.bannerImage.replace('/upload/', '/upload/fl_attachment/') %>" download class="menu-link">
        üì• Download Brochure
      </a>
    <% } %>

    
  </div>
  </div>
  <div class="card-section">
    <h2><%= event.title %></h2>
    <div class="description-box">
      <%= event.description %>
    </div>
    <div class="rules-box">
      <%= event.rules %>
    </div>
    <% if (user && user.userType === 'attendee') { %>
  <a href="/user/booking/<%= event._id %>">
    <button class="btn">Book Event</button>
  </a>
<% } %>
  </div>

    

  <div class="reviews-panel">
    <h3 style="text-align:center; color:#6c5ce7;">üìù Event Reviews</h3>
    <div class="review_list">
      <% if (reviews && reviews.length > 0) { %>
        <% reviews.forEach(review => { %>
          <div class="review-item">
            <p><strong><%= review.user.firstName || 'Anonymous' %> <%= review.user.lastName %>:</strong></p>
            <p><%= review.comment %></p>
            <p>Rating: <% for (let i = 0; i < review.rating; i++) { %>‚≠ê<% } %> (<%= review.rating %>/5)</p>
          </div>
        <% }); %>
      <% } else { %>
        <p style="text-align:center; color:#555;">No reviews yet!</p>
      <% } %>
    </div>

    <% let userReview = null; if (reviews && reviews.length > 0) {
      userReview = reviews.find(review => review.user._id.toString() === user._id.toString());
    } %>

    <% if (userReview) { %>
      <form action="/user/delete-review/<%= event._id %>" method="POST" style="margin-top: 10px; text-align: center;">
        <input type="hidden" name="reviewId" value="<%= userReview._id %>" />
        <button type="submit" class="add_btn" style="background-color: #e74c3c;">Delete Your Review</button>
      </form>
    <% } else { %>
      <form action="/user/event-details/<%= event._id %>" method="POST" style="margin-top: 10px;">
        <textarea name="Review" placeholder="Write your review here..." required style="width: 100%; padding: 8px;"></textarea>
        <input type="number" name="Rating" placeholder="‚≠ê Rating (1-5)" min="1" max="5" required style="width: 100%; padding: 8px;">
        <button type="submit" class="submit_btn" style="margin-top: 5px;">Submit</button>
      </form>
    <% } %>
  </div>
  <% if (event.organizer) { %>
      <div class="organizer-box">
        <h3 style="color: #d63384;">üëë Event Organizer</h3>
        <div class="organizer-profile">
          <img src="<%= event.organizer.profilePicture || '/user.jpeg' %>" class="organizer-img" />
          <div class="organizer-info">
            <p><strong><%= event.organizer.firstName %> <%= event.organizer.lastName %></strong></p>
            <p><strong>Email:</strong> <%= event.organizer.email %></p>
            <p><strong><%= event.organizer.userType %></strong></p>
          </div>
        </div>
      </div>
    <% } %>

    <% if (event.attendees && event.attendees.length > 0) { %>
      <div class="attendees-section">
        <h3 style="color: #6c5ce7;">üë• Attendees</h3>
        <div class="attendee-grid">
          <% event.attendees.forEach(attendee => { %>
            <div class="attendee-card">
              <img src="<%= attendee.profilePicture || '/user.jpeg' %>" class="attendee-img" />
              <p><%= attendee.firstName %> <%= attendee.lastName || '' %></p>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>
</div>

<%- include('../partials/loading') %>
<%- include('../partials/footer') %>
</body>
</html>